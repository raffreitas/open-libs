# Set default behavior to automatically normalize line endings
* text=auto

# Force LF for all text files
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.slnx text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf

# Scripts
*.ps1 text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.dll binary
*.exe binary
*.pdb binary
*.nupkg binary
*.snupkg binary
*.zip binary
*.7z binary
*.tar binary
*.gz binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Linguist overrides (for GitHub language detection)
*.Designer.cs linguist-generated=true
*.generated.cs linguist-generated=true
**/obj/** linguist-generated=true
**/bin/** linguist-generated=true
